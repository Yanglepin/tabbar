/**index.wxss**/
/* 轮播图 */
.swiper {
  height: 380rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.swiper .wx-swiper-dots.wx-swiper-dots-horizontal{
  margin-bottom: 5rpx;
}
.swiper .wx-swiper-dot{
  display: inline-flex;
  height: 6rpx;
  margin-left: 10rpx;
  justify-content:space-between;
}
.swiper .wx-swiper-dot{
  width:23rpx;
}
.swiper .wx-swiper-dot::before{
  content: '';
  flex-grow: 1; 
  background:#8dc9c9;
  border-radius: 8rpx;
}
.swiper .wx-swiper-dot-active{
  width:35rpx;
}
.swiper .wx-swiper-dot-active::before{
  background:#fff;   
}

/* 公告滚动栏 */
.news_list{
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.news_list image.news{
  width: 65rpx !important;
  height: 60rpx !important;
  margin-left: 5%;
}
.news_list .swiper_container {
  height: 100rpx;
  line-height: 110rpx;
  width: 80%;
  margin-left: 1.5%;
}
.news_list .swiper_container .swiper_item {
  font-size: 28rpx;
  color: #656565;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
}

/* 扭蛋机 */
.niudanji{
  width: 100%;
  margin: 5% 0rpx;
  text-align: center;
  background-color: #fff;
}
.niudanji image{
   width: 250rpx;
   height: 380rpx;
   display: inline-block;
   margin: 5% 0rpx 0rpx 0rpx;
}
.niudanji text{
  display: block;
  margin-bottom: 5%;
  color: #666666;
  font-size: 32rpx;

}

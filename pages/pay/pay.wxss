/* pages/pay/pay.wxss */
page{
  background-color: #ebebeb;
}
.top{
  width: 90%;
  margin: 5%;
  background-color: #fff;
  height: 260rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.top .left{
  margin-left: 5%;
}
.top .left image{
  width: 210rpx;
  height: 160rpx;
  border-radius: 20rpx;
  border: 6px solid #cccccc;
  box-sizing: border-box;
}
.top .right{
  font-size: 30rpx;
  margin-left: 6%;
  width: 60%;
}
.top .right view{
  height: 50rpx;
  line-height: 50rpx;
  color: #333;
}
.top .right view text.orange{
  font-size: 30rpx;
}

.member-list{
  width: 100%;
  /* background-color: #fff; */
}
.member-list .member-list-con{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color:#fff;
}
.member-list .member-list-con:first-child{
  border-bottom: 1px solid #b7b7b7;
}
.member-list .member-list-con .left{
   width: 32%;
   margin-left: 5%;
}
.member-list .member-list-con:first-child .left image{
  width: 50rpx;
  height: 50rpx;
}
.member-list .member-list-con .left image{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-right: 6%;
}
.member-list .member-list-con .left text{
  display: inline-block;
  font-size: 30rpx;
  color: #8b8b8b;
}

.member-list .member-list-con:nth-child(3) .left text{
  color: #5c5c5c;
  font-size: 36rpx;
}
.member-list .member-list-con:nth-child(3) .right text{
  font-size: 36rpx;
}

.member-list .member-list-con .right{
  width: 60%;
  margin-right: 3%;
  text-align: right;
}
.member-list .member-list-con .right image{
  width: 25rpx;
  height: 35rpx;
}
.member-list .member-list-con .right text{
  font-size: 30rpx;
  padding-right: 5%;
}
.btn{
  width: 100%;
}
.btn text{
  display: inline-block;
  width: 90%;
  background-color: #ff6b00;
  color: #fff;
  font-size: 36rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin-left: 5%;
  margin-top: 25%;
  border-radius: 40rpx;
}
radio-group{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color:#fff;
  display: inline-block;
}

/*  重写 radio 样式  */
/* 未选中的 背景样式 */
radio .wx-radio-input{
   border-radius: 50%;/* 圆角 */
   width: 40rpx;
   height: 40rpx;
}
/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked::before{
  width: 60rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 60rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 60rpx;
  background: -moz-linear-gradient(left, #00cbcc 0%, #009bcc 100%);
  background: -webkit-gradient(linear, left top, right bottom, color-stop(0%,#00cbcc), color-stop(100%,#009bcc));
  background: -webkit-linear-gradient(left, #00cbcc 0%,#009bcc 100%);
  background: -o-linear-gradient(left, #00cbcc 0%,#009bcc 100%);
  background: -ms-linear-gradient(left, #00cbcc 0%,#009bcc 100%);
  background: linear-gradient(to right, #00cbcc 0%,#009bcc 100%);
  border-radius: 50%;/* 圆角 */
  text-align: center;
  font-size:30rpx; /* 对勾大小 30rpx */
  color:#fff; /* 对勾颜色 白色 */
  border: none;
}
.num-tit{
  display: inline-block;
  float: left;
}
.num{
  border: 1px solid #b7b7b7;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 6rpx;
  display: inline-block;
  margin-left: 5%;
}
.num text{
  display: inline-block;
  float: left;
  font-size: 34rpx;
  width: 50rpx;
  text-align: center;
}
.num input{
  width: 40rpx;
  color: #ff6b00;
  font-size: 30rpx;
  float: left;
  text-align: center;
}

 

/* pages/myInfo/myInfo.wxss */
.info-box {
  width: 100%;
  background-color: #fff;
}
.info-box .info-list{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  color: #464646;
  font-size: 30rpx;
  border-bottom: 1px solid #f2f2f2;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.info-box .info-list:first-child{
  height: 140rpx;
  line-height: 140rpx;
}
.info-list .name{
  width: 20%;
  margin-left: 5%;
}
.info-list .con{
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
  margin-right: 10%;
  color: #a0a0a0;
  /* width: 80%; */
  /* vertical-align: middle; */
}
.info-list .con input{
  /* border: 1rpx solid #dadada; */
  border-radius: 8rpx;
  height: 70rpx;
  line-height: 70rrpx;
  margin-top:15rpx;
  padding-left: 20rpx;
  text-align: right;
}

.info-list .con icon.tou image{
  width: 100rpx;
  height: 100rpx;
  margin-top: 3%;
  border-radius: 20rpx;
}
.info-list .con icon.right-arrow image{
  position: absolute;
  top: 33%;
  right: -40rpx;
  width: 20rpx;
  height: 35rpx;
}
.info-list1{
  width: 100%;
  display: flex;
  flex-direction: row;
}
.info-list1 .name{
  color: #464646;
  font-size: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  width:20%;
  margin-left:5%;

}
.info-list1 .con{
  width: 65%;
}
.info-list1 textarea{
  /* border: 1rpx solid #dadada; */
  color: #a0a0a0;
  text-align: right;
  border-radius: 8rpx;
  margin-top:15rpx;
  margin-left: 16%;
  padding-left: 20rpx;
  width: 80%;
  height: 200rpx;
  font-size: 30rpx; 
  margin-bottom: 5%;
}
.left-btn{
  width: 100%;
  text-align: center;
  margin-top: 20%;
}
.left-btn text{
  display: inline-block;
  width: 80%;
  font-size: 32rpx;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 80rpx;
}